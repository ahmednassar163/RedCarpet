<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <GridView
        android:id="@+id/grid_movie_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/grid_item_movie_width"
        android:verticalSpacing="@dimen/grid_item_movie_spacing"
        android:horizontalSpacing="@dimen/grid_item_movie_spacing"
        android:padding="@dimen/grid_item_movie_spacing"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:smoothScrollbar="true"
        android:visibility="invisible"/>


    <LinearLayout
        android:id="@+id/linearLayout_no_connection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_no_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/no_connection" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back To Earth Dude! No Connection Here."
            android:textSize="15dp"
            android:textColor="#000"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We enabled wifi for you, wait then touch to refresh"
            android:textSize="10dp"
            android:textColor="#000"
            android:gravity="center"/>
    </LinearLayout>

</FrameLayout>
